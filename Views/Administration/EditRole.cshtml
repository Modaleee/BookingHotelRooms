@model EditRoleViewModel

<div class="col-sm-4 offset-sm-4">
    <h3>Rename this role</h3>
</div>


<div class="col-sm-4 offset-sm-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="m-3">
            <label asp-for="RoleName">Name</label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName"></span>
        </div>

        <div class="m-3">
            <button type="submit" class="btn btn-outline-dark">Rename</button>
            <a asp-controller="Administration" asp-action="Roles" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{

    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}