@model LoginUser


<div class="col-sm-4 offset-sm-5 mt-4">
    <h1>Login</h1>
</div>

<div class="row">
    <div class="card col-sm-4 offset-sm-4">
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="form-group mt-4">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="RememberMe"></label>
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <button type="submit" class="btn btn-outline-dark">Login</button>
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-danger  mt-3 mb-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}